{
  "name": "decision-maker",
  "version": "1.0.0",
  "description": "Http triggered lambda functions for decision making, which can be integrated with slack commands.",
  "scripts": {
    "deploy": "./node_modules/serverless/bin/serverless deploy -v",
    "lint": "tslint -c tslint.json 'src/**/*.ts'",
    "release": "semantic-release --debug",
    "remove": "./node_modules/serverless/bin/serverless remove -v",
    "start": "serverless offline start",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "echo $HUSKY_GIT_PARAMS && commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": "tslint -c tslint.json 'src/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jaypeng2015/decision-maker.git"
  },
  "keywords": [
    "decision",
    "roll",
    "dice",
    "coin",
    "Step Functions"
  ],
  "engines": {
    "node": ">= 8.10.0"
  },
  "author": "Jingwei Peng",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jaypeng2015/decision-maker/issues"
  },
  "homepage": "https://github.com/jaypeng2015/decision-maker#readme",
  "devDependencies": {
    "@commitlint/cli": "8.2.0",
    "@commitlint/config-conventional": "8.2.0",
    "@semantic-release/exec": "3.3.7",
    "@semantic-release/git": "7.0.16",
    "@types/aws-lambda": "8.10.33",
    "@types/jest": "24.0.18",
    "@types/lodash": "4.14.141",
    "@types/node": "10.12.24",
    "@types/request": "2.48.3",
    "husky": "3.0.7",
    "jest": "24.9.0",
    "lint-staged": "9.4.0",
    "semantic-release": "15.13.24",
    "serverless": "1.53.0",
    "serverless-offline": "5.11.0",
    "serverless-pseudo-parameters": "2.4.0",
    "serverless-step-functions": "2.8.0",
    "serverless-step-functions-offline": "2.1.2",
    "serverless-webpack": "5.3.1",
    "source-map-support": "0.5.13",
    "timekeeper": "2.2.0",
    "ts-jest": "24.1.0",
    "ts-loader": "6.1.2",
    "tslint": "5.20.0",
    "tslint-config-prettier": "1.18.0",
    "typescript": "3.6.3",
    "webpack": "4.41.0",
    "webpack-node-externals": "1.7.2"
  },
  "dependencies": {
    "aws-sdk": "2.437.0",
    "aws-xray-sdk": "2.3.4",
    "qs": "6.8.0",
    "request": "2.88.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": ".*test\\.(ts|tsx|js)$"
  }
}
